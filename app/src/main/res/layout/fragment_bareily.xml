<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:bootstrap="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.codiodes.theummahguide.fragments.BareilyFragment"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="35dp"
        android:weightSum="2">

        <com.beardedhen.androidbootstrap.BootstrapButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Button 1"
            bootstrap:bb_icon_right="fa-book"
            bootstrap:bb_type="primary"
            android:layout_weight="1"/>

        <com.beardedhen.androidbootstrap.BootstrapButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Button 2"
            bootstrap:bb_icon_right="fa-bookmark-o"
            bootstrap:bb_type="primary"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:weightSum="2">

        <com.beardedhen.androidbootstrap.BootstrapButton
            android:id="@+id/demo_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Button 3"
            bootstrap:bb_icon_right="fa-chevron-circle-right"
            bootstrap:bb_type="primary"
            android:layout_weight="1" />

        <com.beardedhen.androidbootstrap.BootstrapButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Button 4"
            bootstrap:bb_icon_right="fa-chevron-circle-right"
            bootstrap:bb_type="primary"
            android:layout_weight="1"/>
    </LinearLayout>

</LinearLayout>
